<Window x:Class="GroceryUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroceryUI"
        mc:Ignorable="d"
        Title="LoginWindow" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid Margin="10">
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" Text="Username" TextWrapping="NoWrap" VerticalAlignment="Top" Width="100" Margin="58,0,0,0"/>
        <Button x:Name="CancelLoginButton" Content="Cancel" Margin="132,30,0,0" HorizontalAlignment="Left" Width="40" Height="20" VerticalAlignment="Top" Click="CancelLoginButton_Click"/>
        <Button x:Name="PerformLoginButton" Click="AttemptLogin" Content="Login" Margin="87,30,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="40"/>
        <TextBlock HorizontalAlignment="Left" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Window>
