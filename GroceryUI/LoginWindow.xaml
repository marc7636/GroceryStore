<Window x:Class="GroceryUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroceryUI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="140" Width="300">
    <Grid>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Center" Margin="0,25,0,0" Text="Username" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="CancelLoginButton" Content="Cancel" HorizontalAlignment="Left" Margin="60,85,0,0" VerticalAlignment="Top"/>
        <Button x:Name="PerformLoginButton" Click="AttemptLogin" Content="Login" Margin="0,85,60,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="33"/>

    </Grid>
</Window>
